<mapper namespace="com.wzx.dao.UserDao">
	<!-- 登录 -->
	<select id="login" parameterType="user" resultType="user">
		select * from p_user wherer name=#{name} and pwd=#{pwd}
	</select>
	<!-- 注册 -->
	<insert id="reg" parameterType="user">
		insert into p_user 
	</insert>
</mapper>
